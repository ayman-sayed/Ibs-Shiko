<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="pos_payment_add_customer_id" model="ir.ui.view">
            <field name="name">pos.payment.add.customer</field>
            <field name="model">pos.payment</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_payment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='amount']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="partner_id"/>
                </xpath>

            </field>
        </record>
      <!-- Inherit Form View to Modify it -->
        <record id="stock_quant_add_container_no_id" model="ir.ui.view">
            <field name="name">stock.quant.add.container_no</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='product_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="container_no"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>
