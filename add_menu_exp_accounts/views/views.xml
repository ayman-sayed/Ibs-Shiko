<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="expense_view_form" model="ir.ui.view">
            <field name="name">expense_view_form</field>
            <field name="model">expense.expense</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="get_confirm" string="Confirm" class="oe_highlight" invisible="state != 'draft'" type="object"/>
                        <button name="action_draft" string="Reset To Draft" type="object" class="btn btn-secondary"
                                invisible="state not in 'confirm'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="seq" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="expense_date" readonly="state == 'confirm'"/>
                                <field name="name" readonly="state == 'confirm'"/>
                            </group>
                            <group>
                                <field name="journal_id" readonly="state == 'confirm'"/>
                                <field name="journal_entry_id" readonly="1"
                                />
                            </group>
                        </group>

                        <notebook>
                            <page string="Expenses">
                                <field name="expenses_ids" readonly="state == 'confirm'">
                                    <tree editable="1">
                                        <field name="product_ids" options="{'no_create': True}"/>
                                        <field name="name" optional="show"/>
                                        <field name="account_id" optional="show"/>
                                        <field name="analytic_account_id" optional="show"/>
                                        <field name="quantity" optional="show"/>
                                        <field name="price_unit" optional="show"/>
                                        <field name="tax_ids" widget="many2many_tags" optional="show"/>
                                        <field name="price_subtotal" optional="show"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <group>

                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="amount_taxed" widget="monetary" readonly="1"/>
                                <field name="tax" widget="monetary" readonly="1"/>
                                <field name="total" widget="monetary" readonly="1"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="expense_view_tree" model="ir.ui.view">
            <field name="name">expense_view_tree</field>
            <field name="model">expense.expense</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="seq" readonly="1"/>
                    <field name="name"/>
                    <field name="expense_date"/>
                    <field name="journal_id"/>
                </tree>
            </field>
        </record>
        <record id="Expense_view_action" model="ir.actions.act_window">
            <field name="name">Expenses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">expense.expense</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
            </field>
        </record>
        <record id="receive_view_form" model="ir.ui.view">
            <field name="name">receive_view_form</field>
            <field name="model">receive.receive</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="get_confirm" string="Confirm" class="oe_highlight" invisible="state != 'draft'" type="object"/>
                        <button name="action_draft" string="Reset To Draft" type="object" class="btn btn-secondary"
                                invisible="state not in 'confirm'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="seq" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="receive_date" readonly="state == 'confirm'"/>
                                <field name="name" readonly="state == 'confirm'"/>
                            </group>
                            <group>
                                <field name="journal_id" readonly="state == 'confirm'"/>
                                <field name="journal_entry_id" readonly="1"
                                />
                            </group>
                        </group>

                        <notebook>
                            <page string="receives">
                                <field name="receives_ids" readonly="state == 'confirm'">
                                    <tree editable="1">
                                        <field name="product_ids" options="{'no_create': True}"/>
                                        <field name="name" optional="show"/>
                                        <field name="account_id" optional="show"/>
                                        <field name="analytic_account_id" optional="show"/>
                                        <field name="quantity" optional="show"/>
                                        <field name="price_unit" optional="show"/>
                                        <field name="tax_ids" widget="many2many_tags" optional="show"/>
                                        <field name="price_subtotal" optional="show"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <group>

                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="amount_taxed" widget="monetary" readonly="1"/>
                                <field name="tax" widget="monetary" readonly="1"/>
                                <field name="total" widget="monetary" readonly="1"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="receive_view_tree" model="ir.ui.view">
            <field name="name">receive_view_tree</field>
            <field name="model">receive.receive</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="seq" readonly="1"/>
                    <field name="name"/>
                    <field name="receive_date"/>
                    <field name="journal_id"/>
                </tree>
            </field>
        </record>

        <record id="receive_view_action" model="ir.actions.act_window">
            <field name="name">receive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">receive.receive</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
            </field>
        </record>
        <!-- This Menu Item Must have a parent -->
<!--        <menuitem id="Expense_view_menu_ID_categ" name="Expenses" parent="account.menu_finance" sequence="34"/>-->
       <menuitem id="Expense_view_menu" name="Expenses" parent="account.menu_finance_entries_accounting_miscellaneous"
                  action="Expense_view_action" sequence="2"/>
        <!--        <menuitem id="receive_view_menu" name="receive" parent="add_menu_exp_account.Expense_view_menu_ID_categ"-->
        <!--                  action="receive_view_action" sequence="3"/>-->

        <record id="view_partner_form_expenses" model="ir.ui.view">
            <field name="name">view_partner_form_expenses</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='property_account_payable_id']" position="after">
                    <field name="is_expenses"/>
                    <field name="is_receive"/>
                </xpath>

            </field>
        </record>

        <record id="view_account_journal_form_inherits" model="ir.ui.view">
            <field name="name">view_account_journal_form.inherits</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_control_ids']" position="after">
                    <field name="expenses_filtration"/>
                    <field name="for_expenses" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_move_form_expenses" model="ir.ui.view">
            <field name="name">view_move_form_expenses</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@id='header_right_group']" position="inside">
                    <field name="journal_payment_id" domain="[('type', 'in', ['cash', 'bank'])]"/>
                </xpath>

            </field>
        </record>

        <record id="view_account_move_search_inherit" model="ir.ui.view">
            <field name="name">view.account.move.search.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='to_check']" position="after">
                    <filter name="expenses_filtration" string="Expenses Filtration"
                            domain="[('expenses_filtration', '=', True)]"/>
                </xpath>
            </field>
        </record>

        <record id="account_form_expenses_action" model="ir.actions.act_window">
            <field name="name">Expenses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_expenses', '=', True)]</field>
            <field name="context">{'default_is_expenses': True, 'default_move_type': 'in_invoice',
                'search_default_expenses_filtration': True}
            </field>
        </record>

        <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_out_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'out_invoice'), ('is_receive', '=', False)]</field>
            <field name="context">{'default_move_type': 'out_invoice'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a customer invoice
                </p>
                <p>
                    Create invoices, register payments and keep track of the discussions with your customers.
                </p>
            </field>
        </record>

        <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
            <field name="name">Bills</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_in_invoice_bill_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'in_invoice')]</field>
            <field name="domain">[('move_type', '=', 'in_invoice'), ('is_expenses', '=', False)]</field>
            <field name="context">{'default_move_type': 'in_invoice'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a vendor bill
                </p>
                <p>
                    Create invoices, register payments and keep track of the discussions with your vendors.
                </p>
            </field>
        </record>

<!--        <menuitem id="account_form_expenses_action_menu" name="Expenses Bills" parent="Expense_view_menu_ID_categ"-->
<!--                  action="account_form_expenses_action"/>-->

        <record id="account_form_receive_action" model="ir.actions.act_window">
            <field name="name">Receive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_receive', '=', True)]</field>
            <field name="context">{'default_is_receive': True, 'default_move_type': 'out_invoice'}</field>
        </record>

<!--        <menuitem id="account_form_receive_action_menu" name="Receive" parent="Expense_view_menu_ID_categ"-->
<!--                  action="account_form_receive_action"/>-->

        <record id="view_move_form_inherit_323" model="ir.ui.view">
            <field name="name">view_move_form_inherit_323</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="is_receive" invisible="1"/>
                    <field name="is_expenses" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='is_expenses']" position="after">
                    <field name="expenses_filtration" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='payment_reference']" position="attributes">
                    <attribute name="invisible">move_type not in ['out_invoice',
                        'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'] or is_receive == True or is_expenses == True
                    </attribute>
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_bank_id']" position="attributes">
                    <attribute name="invisible">move_type not in ['in_invoice', 'in_refund',
                        'in_receipt'] or is_receive == True or is_expenses == True
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='ref'][1]" position="attributes">
                    <attribute name="invisible">move_type not in ['in_invoice', 'in_refund',
                        'in_receipt'] or is_receive == True or is_expenses == True
                    </attribute>
                </xpath>
                <xpath expr="//label[@for='ref']" position="attributes">
                    <attribute name="invisible">move_type not in ['in_invoice', 'in_refund',
                        'in_receipt'] or is_receive == True or is_expenses == True
                    </attribute>
                </xpath>
            </field>
        </record>

        <record id="view_move_form_inherit_purchase_move" model="ir.ui.view">
            <field name="name">view_move_form_inherit_purchase_move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="purchase.view_move_form_inherit_purchase"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='purchase_vendor_bill_id']" position="attributes">
                    <attribute name="invisible">state != 'draft' or move_type != 'in_invoice' or is_receive == True or is_expenses == True
                    </attribute>
                </xpath>

                <xpath expr="//label[@for='purchase_vendor_bill_id']" position="attributes">
                    <attribute name="invisible">state != 'draft' or move_type != 'in_invoice' or is_receive == True or is_expenses == True
                    </attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>