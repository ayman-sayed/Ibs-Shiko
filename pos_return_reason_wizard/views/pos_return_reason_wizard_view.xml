<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_return_reason_wizard_form" model="ir.ui.view">
        <field name="name">pos.return.reason.wizard.form</field>
        <field name="model">pos.return.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Return Reason">
                <group>
                    <field name="return_reason"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_return" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
      <record id="action_pos_return_reason_wizard" model="ir.actions.act_window">
        <field name="name">Return Reason</field>
        <field name="res_model">pos.return.reason.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_pos_return_reason_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
