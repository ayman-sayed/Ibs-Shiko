<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="id_expenses_report" model="ir.actions.report">
            <field name="name">Expenses</field>
            <field name="model">expense.expense</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">add_menu_exp_account.id_expenses_report_template</field>
            <field name="report_file">add_menu_exp_account.id_expenses_report_template</field>
<!--            <field name="print_report_name">'Student Card - %s' % (object.name)</field>-->
            <field name="binding_model_id" ref="model_expense_expense"/>
        </record>
<!--        <report-->
<!--                id="id_expenses_report"-->
<!--                model="expense.expense"-->
<!--                report_type="qweb-pdf"-->
<!--                string="Expenses"-->
<!--                name="add_menu_exp_account.id_expenses_report_template"-->
<!--                file="add_menu_exp_account.id_expenses_report_template"-->
<!--                menu="True"-->
<!--        />-->
        <template id="id_expenses_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <table width="100%">
                            <tr>
                                <td width="50%" style="font-size: 40px;">
                                    <span t-field="o.seq"/>
                                </td>
                                <td width="50%">
                                    Ref :-
                                    <span t-field="o.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td width="50%">
                                    Date Expenses :-
                                    <span t-field="o.expense_date"/>
                                </td>
                                <td width="50%">
                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <br></br>
                        <table width="100%">
                            <thead>
                                <tr>
                                    <th name="th_description"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>المنتج</span>
                                    </th>
                                    <th name="th_source"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>الشرح</span>
                                    </th>
                                    <th name="th_quantity"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>الكمية</span>
                                    </th>
                                    <th name="th_priceunit"
                                        t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;">
                                        <span>السعر</span>
                                    </th>
                                    <th name="th_purchase_unit"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>الاجمالى</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.expenses_ids" t-as="line">
                                    <tr>
                                        <td class="text-center" style="border: 2px solid #1090C2;">
                                            <span t-field="line.product_ids.name"/>
                                        </td>
                                        <td class="text-center o_price_total" style="border: 2px solid #1090C2;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td class="text-center" style="border: 2px solid #1090C2;">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td class="text-center" style="border: 2px solid #1090C2;">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                        <td class="text-center o_price_total" style="border: 2px solid #1090C2;">
                                            <span class="text-nowrap" t-field="line.price_subtotal"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <br></br>
                        <table width="100%">
                            <tr>
                                <td class="text-left" width="60%"/>
                                <td class="text-center" width="20%" style="border: 2px solid #2DB209;">
                                    <span t-field="o.amount_taxed"/>
                                </td>
                                <td class="text-right" width="20%" style="border: 2px solid #2DB209;">
                                    الاجمالى قبل الضريبة
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left" width="60%"/>
                                <td class="text-center" width="20%" style="border: 2px solid #2DB209;">
                                    <span t-field="o.tax"/>
                                </td>
                                <td class="text-right" width="20%" style="border: 2px solid #2DB209;">
                                    الضرائب
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left" width="60%"/>
                                <td class="text-center" width="20%" style="border: 2px solid #2DB209;">
                                    <span t-field="o.total"/>
                                </td>
                                <td class="text-right" width="20%" style="border: 2px solid #2DB209;">
                                    الاجمالى
                                </td>
                            </tr>
                        </table>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>