<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                id="id_receive_report"
                model="receive.receive"
                report_type="qweb-pdf"
                string="Receive"
                name="add_menu_exp_account.id_receive_report_template"
                file="add_menu_exp_account.id_receive_report_template"
                menu="True"
        />
           <template id="id_receive_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <table width="100%">
                            <center>
                                <b>
                                    ( اذن استلام )
                                </b>
                            </center>
                            <br/>
                            <br/>
                            <tr>
                                <td width="50%" style="font-size: 40px;">
                                    <span t-field="o.seq"/>
                                </td>
                                <td width="50%">
                                    Ref :-
                                    <span t-field="o.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td width="50%">
                                    Date Receive :-
                                    <span t-field="o.receive_date"/>
                                </td>
                                <td width="50%">
                                    journal :
                                     <span t-field="o.journal_id"/>

                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <br></br>
                        <table width="100%">
                            <thead>
                                <tr>
                                    <th name="th_description"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>المنتج</span>
                                    </th>
                                    <th name="th_account_id"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>الحساب</span>
                                    </th>
                                    <th name="th_analytic_account_id"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>الحساب التحليلى</span>
                                    </th>
                                    <th name="th_description"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>الشرح</span>
                                    </th>
                                    <th name="th_quantity"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>الكمية</span>
                                    </th>
                                    <th name="th_priceunit"
                                        t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;">
                                        <span>السعر</span>
                                    </th>
                                    <th name="th_purchase_unit"
                                        style="border: 2px solid #1090C2;; background-color: #1090C2;; color: white;"
                                        class="text-center">
                                        <span>الاجمالى</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.receives_ids" t-as="line">
                                    <tr>
                                        <td class="text-center" style="border: 2px solid #1090C2;">
                                            <span t-field="line.product_ids.name"/>
                                        </td>

                                        <td class="text-center" style="border: 2px solid #1090C2;">
                                            <span t-field="line.account_id"/>
                                        </td>
                                        <td class="text-center" style="border: 2px solid #1090C2;">
                                            <span t-field="line.analytic_account_id"/>
                                        </td>

                                        <td class="text-center o_price_total" style="border: 2px solid #1090C2;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td class="text-center" style="border: 2px solid #1090C2;">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td class="text-center" style="border: 2px solid #1090C2;">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                        <td class="text-center o_price_total" style="border: 2px solid #1090C2;">
                                            <span class="text-nowrap" t-field="line.price_subtotal"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <br></br>
                        <table width="100%">
                            <tr>
                                <td class="text-left" width="60%"/>
                                <td class="text-center" width="20%" style="border: 2px solid #2DB209;">
                                    <span t-field="o.amount_taxed"/>
                                </td>
                                <td class="text-right" width="20%" style="border: 2px solid #2DB209;">
                                    الاجمالى قبل الضريبة
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left" width="60%"/>
                                <td class="text-center" width="20%" style="border: 2px solid #2DB209;">
                                    <span t-field="o.tax"/>
                                </td>
                                <td class="text-right" width="20%" style="border: 2px solid #2DB209;">
                                    الضرائب
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left" width="60%"/>
                                <td class="text-center" width="20%" style="border: 2px solid #2DB209;">
                                    <span t-field="o.total"/>
                                </td>
                                <td class="text-right" width="20%" style="border: 2px solid #2DB209;">
                                    الاجمالى
                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <br></br>
                        <br></br>
                        <table width="100%" class="border-0">
                            <tr class="border-0">
                                <td width="40%" class="border-0">
                                    <strong>توقيع المستلم</strong>
                                </td>
                            </tr>
                            <tr class="border-0">
                                <td width="40%" class="border-0">
                                    <strong>.................................................</strong>
                                </td>
                            </tr>
                        </table>
                    </t>
                </t>
            </t>
        </template>
        <!--        ##############################################################################-->
       
    </data>
</odoo>