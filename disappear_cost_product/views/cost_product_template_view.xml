<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
     <record id="inherit_product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.standard_price_uom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='standard_price']" position="attributes">
                <attribute name="groups">disappear_cost_product.group_disappear_cost_product</attribute>
            </xpath>
            <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                <attribute name="groups">disappear_cost_product.group_disappear_cost_product</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit Tree View to Modify it -->
    <record id="inherit_product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.standard_price_uom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">disappear_cost_product.group_disappear_cost_product</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit Tree View to Modify it -->
    <record id="inherit_product_product_tree_view" model="ir.ui.view">
        <field name="name">product.product.tree.inherit.standard_price_uom</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="groups">disappear_cost_product.group_disappear_cost_product</attribute>
            </xpath>
        </field>
    </record>

</odoo>