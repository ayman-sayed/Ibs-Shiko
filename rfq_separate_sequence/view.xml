<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_purchase_order_form" model="ir.ui.view">
            <field name="name">inherit_purchase_form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='button_confirm'][2]" position="replace">
                        <button name="button_confirm" type="object" invisible="state == 'purchase'"
                                string="Confirm Order" context="{'validate_analytic': True}" class="oe_highlight"
                                id="bid_confirm" data-hotkey="q"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
