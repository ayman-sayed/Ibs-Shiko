<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="reset_to_draft_server" model="ir.actions.server">
            <field name="name">Reset to Draft</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
<!--            <field name="binding_view_types">form</field>-->
            <field name="state">code</field>
            <field name="code">
                action = records.server_button_draft()
<!--                action = records.write({'state': 'draft'})-->
            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="account_move_add_collection_id" model="ir.ui.view">
            <field name="name">account.move.add.collection</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <!-- Add your fields or attributes here -->
                    <page name="collection" string="Collection">
                        <field name="collection_ids">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="amount"/>
                                <field name="move_id" inisible="1"/>
                                <field name="partner_id" inisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

        <record id="collection_tree_id" model="ir.ui.view">
            <field name="name">collection tree</field>
            <field name="model">collection</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="move_id"/>
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>
